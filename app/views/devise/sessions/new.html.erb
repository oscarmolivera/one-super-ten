<div class="hold-transition theme-primary bg-img full-page-bg">
  <div class="container h-p100">
    <div class="row align-items-center justify-content-md-center h-p100">
      <div class="col-12">
        <div class="row justify-content-center g-0">
          <div class="col-lg-5 col-md-5 col-12">
            <div class="bg-white rounded10 shadow-lg">
              <div class="content-top-agile p-20 pb-0">
                <h2 class="text-primary">Nubbe</h2>
                <p class="mb-0">Gestion deportiva de alto rendimiento</p>
              </div>
              <div class="p-40">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <div class="input-group mb-3">
                      <span class="input-group-text bg-transparent"><i class="ti-user"></i></span>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control ps-15 bg-transparent", placeholder: "Email" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="input-group mb-3">
                      <span class="input-group-text bg-transparent"><i class="ti-lock"></i></span>
                      <%= f.password_field :password, autocomplete: "current-password", class: "form-control ps-15 bg-transparent", placeholder: "Contraseña" %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-6">
                      <div class="checkbox">
                        <%= f.check_box :remember_me, id: "remember_me" %>
                        <%= f.label :remember_me, "Recuérdame" %>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="fog-pwd text-end">
                        <%= link_to "Olvidó su contraseña", new_password_path(resource_name), class: "hover-warning" %>
                      </div>
                    </div>
                    <div class="col-12 text-center">
                      <%= f.submit "Inicia sesión", class: "btn btn-danger mt-10" %>
                    </div>
                  </div>
                <% end %>

                <div class="text-center">
                  <p class="mt-15 mb-0">
                    No tienes una cuenta?
                    <a href="#"> Contact us</a>
                  </p>
                </div>
              </div>
            </div>

            <div class="text-center">
              <p class="mt-20 text-white">  también:  </p>
              <p class="gap-items-2 mb-20">
                <a class="btn btn-social-icon btn-round btn-facebook" href="#"><i class="fa fa-facebook"></i></a>
                <a class="btn btn-social-icon btn-round btn-twitter" href="#"><i class="fa fa-twitter"></i></a>
                <a class="btn btn-social-icon btn-round btn-instagram" href="#"><i class="fa fa-instagram"></i></a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>