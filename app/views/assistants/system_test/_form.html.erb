<h2>Edit Assistant</h2>

<%= form_with model: @assistant, url: assistant_path(@assistant), method: :patch, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <%= form.submit "Update Assistant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", assistants_path, class: "btn btn-secondary mt-3" %>