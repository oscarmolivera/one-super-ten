<!-- sidebar-->
<section class="sidebar position-relative">
  <% if user_signed_in? %>
    <meta name="current-user" content="<%= current_user.id %>">
  <% end %>
  <div class="multinav">
    <div class="multinav-scroll dark-skin ps h-p100">
      <ul class="sidebar-menu" data-widget="tree">
        <% sidebar_menu_items.each do |section| %>
          <li class="header"><%= section[:header] %></li>
          <% section[:items].each do |item| %>
            <li class="<%= item[:children].present? ? 'treeview' : '' %>">
              <% if item[:children].present? %>
                <a href="#">
                  <i class="<%= item[:icon] %>">
                    <span class="path1"></span>
                    <span class="path2"></span>
                  </i>
                  <span><%= item[:label] %></span>
                  <span class="pull-right-container">
                    <i class="fa fa-angle-right pull-right"></i>
                  </span>
                </a>
                <ul class="treeview-menu dt-none">
                  <% item[:children].each do |child| %>
                    <li>
                      <%= link_to child[:path] do %>
                        <i class="<%= child[:icon] %>">
                          <span class="path1"></span>
                          <span class="path2"></span>
                        </i>
                        <%= child[:label] %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <%= link_to item[:path], class: "d-block px-15 py-10 #{'menu-item-active' if current_page?(item[:path])}" do %>
                  <i class="<%= item[:icon] %>">
                    <span class="path1"></span>
                    <span class="path2"></span>
                  </i>
                  <span><%= item[:label] %></span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</section>
<div class="sidebar-footer">
  <%= render 'shared/dashboard/sidebar_footer' %>
</div>