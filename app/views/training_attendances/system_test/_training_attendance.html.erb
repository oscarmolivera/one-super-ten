<div class="container mt-4">
  <h2>Asistencias para: <%= @training_session.category.name %> - <%= l(@training_session.scheduled_at, format: :short) %></h2>

  <%= link_to "Agregar Asistencia", new_training_session_training_attendance_path(@training_session), class: "btn btn-primary mb-3" %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Jugador</th>
        <th>Estado</th>
        <th>Notas</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.player.full_name %></td>
          <td><%= attendance.status.capitalize %></td>
          <td><%= attendance.notes.presence || "-" %></td>
          <td>
            <%= link_to "Editar", edit_training_session_training_attendance_path(@training_session, attendance), class: "btn btn-sm btn-warning" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>