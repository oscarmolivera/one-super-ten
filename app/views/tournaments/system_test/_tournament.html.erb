<div class="container mt-4">
  <h1>Tournaments</h1>
  <%= link_to "New Tournament", new_tournament_path, class: "btn btn-primary mb-3" %>

  <div class="card">
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Dates</th>
            <th>Status</th>
            <th>Public</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tournaments.each do |tournament| %>
            <tr>
              <td><%= link_to tournament.name, tournament_path(tournament) %></td>
              <td><%= "#{tournament.start_date} to #{tournament.end_date}" %></td>
              <td><%= tournament.status.titleize %></td>
              <td><%= tournament.public? ? "Yes" : "No" %></td>
              <td>
                <%= link_to "Edit", edit_tournament_path(tournament), class: "btn btn-sm btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>