<div class="container mt-4">
  <h1><%= @tournament.name %></h1>

  <p><strong>Description:</strong> <%= @tournament.description %></p>
  <p><strong>Dates:</strong> <%= @tournament.start_date %> to <%= @tournament.end_date %></p>
  <p><strong>Status:</strong> <%= @tournament.status.titleize %></p>
  <p><strong>Public:</strong> <%= @tournament.public? ? "Yes" : "No" %></p>
  <p><strong>Categories:</strong> <%= @tournament.categories.map(&:name).join(", ") %></p>

  <h4 class="mt-4">Rules</h4>
  <div class="card">
    <div class="card-body">
      <%= @tournament.rules.body.to_s.html_safe %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back", cup_tournaments_path(@tournament.cup_id), class: "btn btn-outline-dark" %>
  </div>
</div>