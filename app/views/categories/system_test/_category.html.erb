<div class="container mt-4">
  <h1>Categorias</h1>

  <%= link_to "Nueva Categoria", new_category_path, class: "btn btn-primary mb-3" %>

  <div class="card">
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Escuela</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= School.find(category.school_id).name %></td>
              <td>
                <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-warning" %>
                <%= link_to "View Matches", category_matches_path(category), class: "btn btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>