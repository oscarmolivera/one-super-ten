<div class="container py-5">
  <h1 class="text-center mb-5 text-primary">Home#index Bootstrap + Bootstrap Icons Demo</h1>
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
          <span><i class="bi bi-card-checklist me-2"></i> Card Header</span>
          <span class="badge bg-warning text-dark">New</span>
        </div>
        <div class="card-body">
          <h5 class="card-title">Bootstrap 5 Card</h5>
          <p class="card-text text-muted">
            This card uses classes like <code>.card</code>, <code>.card-body</code>, and <code>.text-muted</code>.
          </p>
          <a href="#" class="btn btn-success">
            <i class="bi bi-check2-circle me-1"></i> Accept
          </a>
          <a href="#" class="btn btn-outline-danger">
            <i class="bi bi-x-circle me-1"></i> Decline
          </a>
        </div>
        <div class="card-footer text-end small text-secondary">
          <i class="bi bi-clock me-1"></i> Updated 2 mins ago
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <form class="p-4 bg-light border rounded-3">
        <h5 class="mb-3"><i class="bi bi-person-lines-fill me-2"></i> Contact Form</h5>

        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter name">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>

        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <textarea class="form-control" id="message" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">
          <i class="bi bi-send-plus me-1"></i> Submit
        </button>
      </form>
    </div>

    <!-- Bootstrap Date Range Picker -->
    <div class="container mt-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <i class="fa fa-calendar"></i> Bootstrap Date Range Picker Demo
        </div>
        <div class="card-body">
          <label for="daterange">Choose a date range:</label>
          <input type="text" id="daterange" class="form-control" style="max-width: 300px;" />
        </div>
        <div class="card-footer text-end small text-muted">
          bootstrap-daterangepicker@3.1.0
        </div>
      </div>
    </div>

    <!-- Date Range Picker -->
    <div class="container mt-4">
      <div class="card">
        <div class="card-header bg-secondary text-white">
          <i class="fa fa-calendar"></i> Date Range Picker Demo
        </div>
        <div class="card-body">
          <label for="daterange">Select a date range:</label>
          <input type="text" id="daterange" class="form-control" />
        </div>
        <div class="card-footer text-end small text-muted">
          daterangepicker@3.1.0
        </div>
      </div>
    </div>

    <!-- Select2 -->
    <div class="container mt-4">
      <div class="card mb-4">
        <div class="card-header bg-info text-white">
          <i class="fa fa-list"></i> Select2 Demo
        </div>
        <div class="card-body">
          <label for="basic-select">Basic Select</label>
          <select class="form-select select2-basic" id="basic-select" style="width: 100%">
            <option value="AL">Alabama</option>
            <option value="CA">California</option>
            <option value="TX">Texas</option>
          </select>

          <label for="tag-select" class="mt-4">Tags Input</label>
          <select class="form-select select2-tags" id="tag-select" multiple="multiple" style="width: 100%">
            <option selected="selected">Ruby</option>
            <option selected="selected">Rails</option>
          </select>

          <label for="ajax-select" class="mt-4">Ajax Select (example)</label>
          <select class="form-select select2-ajax" id="ajax-select" style="width: 100%">
            <!-- Options will be loaded dynamically -->
          </select>
        </div>
        <div class="card-footer text-end small text-muted">
          dropzone@6.0.0-beta.2
        </div>
      </div>
    </div>

    <!-- Dropzone File Upload Demo -->
    <div class="container mt-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <i class="fa fa-upload"></i> Dropzone File Upload Demo
        </div>
        <div class="card-body">
          <form id="my-dropzone" class="dropzone border border-secondary p-3 rounded bg-light" action="/upload" method="post" enctype="multipart/form-data">
            <!-- Dropzone will auto-render this as a drag/drop area -->
          </form>
        </div>
        <div class="card-footer text-end small text-muted">
          select2@4.1.0-rc.0
        </div>
      </div>
    </div>
    <!-- Bootstrap Markdown Editor -->
    <div class="container mt-4">
      <div class="card shadow">
        <div class="card-header bg-dark text-white">
          <i class="fa fa-pencil"></i> Bootstrap Markdown Editor
        </div>
        <div class="card-body">
          <button id="get-markdown" class="btn btn-info mt-3">Get Markdown</button>
          <textarea id="markdown-editor" data-provide="markdown" rows="10" class="form-control">
    ### Markdown Example

    - Item 1
    - Item 2
    - Item 3
          </textarea>
        </div>
        <div class="card-footer text-muted small text-end">
          Write Markdown → Renders inside Bootstrap!
        </div>
      </div>
    </div>

    <!-- SweetAlert -->
    <div class="container mt-4">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <i class="fa fa-magic"></i> SweetAlert Demo
        </div>
        <div class="card-body">
          <p>This button will trigger a SweetAlert modal:</p>
          <button id="sweetalert-btn" class="btn btn-primary">
            Show Alert
          </button>
        </div>
        <div class="card-footer text-end small text-muted">
          info Direct dependencies
        </div>
      </div>
    </div>

    <!-- Bootstrap 3 Editable -->
    <div class="container mt-4">
      <div class="card shadow">
        <div class="card-header bg-info text-white">
          <i class="fa fa-edit"></i> Bootstrap 3 Editable Demo
        </div>
        <div class="card-body">
          <p>
            Click to edit: 
            <a href="#" id="username" data-type="text" data-pk="1" data-title="Enter username">superuser</a>
          </p>
          <p>
            Click to select: 
            <a href="#" id="status" class="editable" data-type="select" data-pk="1" data-title="Select status">active</a>
          </p>
          <p>
            <a href="#" class="editable" data-type="text" data-pk="1" data-title="Edit this">Click me</a>
          </p>
        </div>
        <div class="card-footer text-end small text-muted">
          Auto-play & Dots Enabled
        </div>
      </div>
    </div>
    
    <!-- JVectorMap -->
    <div class="container mt-4">
      <div class="card shadow">
        <div class="card-header bg-dark text-white">
          <i class="fa fa-globe"></i> jVectorMap Demo
          
        </div>
        <div class="card-body">
          <div id="map" style="width: 600px; height: 350px"></div>
        </div>
        <div class="card-footer text-end small text-muted">
          Auto-play & Dots Enabled
        </div>
      </div>
    </div>

    <!-- Ekko Lighthouse -->
    <div class="container mt-4">
      <div class="card shadow">
        <div class="card-header bg-dark text-white">
          <i class="fa fa-user"></i> Ekko Lightbox Demo
        </div>
        <div class="card-body">
          <div class="row g-3">
            <% 3.times do |i| %>
              <div class="col-md-4">
                <a href="https://picsum.photos/800/600?random=<%= i + 1 %>" 
                  data-toggle="lightbox" 
                  data-title="Image <%= i+1 %>" 
                  data-footer="This is image <%= i+1 %> description" 
                  data-gallery="lightbox-demo">
                  <img src="https://picsum.photos/800/600?random=<%= i+1 %>" 
                      class="img-fluid border rounded shadow-sm" alt="Thumbnail <%= i+1 %>">
                </a>
              </div>
            <% end %>
          </div>
        </div>
        <div class="card-footer text-end small text-muted">
          Auto-play & Dots Enabled
        </div>
      </div>
    </div>

    <!-- Perfect Scrollbar-->
    <div class="container mt-4">
      <div class="card shadow border-primary">
        <div class="card-header bg-primary text-white">
          <i class="fa fa-cogs"></i> Scroll Test with Legacy CSS Classes
        </div>
        <div class="card-body p-0" style="max-height: 250px; overflow: auto;" id="scrollable-legacy">
          <ul class="list-group list-group-flush">
            <% 1.upto(10) do |i| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><i class="fa fa-check-circle text-success me-2"></i> Legacy Item <%= i %></span>
                <span class="badge bg-secondary rounded-pill"><%= i * 5 %> pts</span>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="card-footer text-end small text-muted">
          Scroll to verify Perfect Scrollbar + CSS loading.
        </div>
      </div>
    </div>
    <div class="container mt-4">
      <div class="card border-primary shadow">
        <div class="card-header bg-primary text-white">
          <i class="fa fa-line-chart"></i> Morris.js Line Chart Example
        </div>
        <div class="card-body">
          <div id="morris-line-chart" style="height: 300px;"></div>
        </div>
        <div class="card-footer text-muted small text-end">
          Data: 2019 - 2023 | Color: Bootstrap Primary
        </div>
      </div>
    </div>
    <div class="container mt-4">
      <div class="card shadow">
        <div class="card-header bg-dark text-white">
          <i class="fa fa-play-circle"></i> OwlCarousel2 Demo
        </div>
        <div class="card-body">
          <div class="owl-carousel owl-theme">
            <% 1.upto(5) do |i| %>
              <div class="item">
                <img src="https://placehold.co/800x300?text=Slide+<%= i %>" class="img-fluid" alt="Slide <%= i %>">
              </div>
            <% end %>
          </div>
        </div>
        <div class="card-footer text-end small text-muted">
          Auto-play & Dots Enabled
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">Test Vis.js Timeline</h5>
      </div>
      <div class="card-body">
        <div id="my-timeline" style="height: 300px;"></div>
      </div>
    </div>
    <div class="container mt-4">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title">Labella.js – Modern Scheduler</h5>
        </div>
        <div class="card-body">
          <svg id="labella-timeline"></svg>
        </div>
      </div>
    </div>
