<div class="container mt-4">
  <div class="card border-primary shadow-lg">
    <div class="card-header bg-primary text-white d-flex align-items-center">
      <i class="fas fa-user fa-lg me-2"></i>
      <h4 class="mb-0">Ficha del Jugador</h4>
    </div>

    <div class="card-body bg-light">
      <div class="row">
        <!-- Información Personal -->
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-5 text-primary">Nombre</dt>
            <dd class="col-sm-7 fw-bold"><%= @player.first_name %> <%= @player.last_name %></dd>

            <dt class="col-sm-5 text-primary">Fecha de Nacimiento</dt>
            <dd class="col-sm-7"><%= l(@player.date_of_birth, format: :long) if @player.date_of_birth %></dd>

            <dt class="col-sm-5 text-primary">Email</dt>
            <dd class="col-sm-7"><%= @player.email %></dd>

            <dt class="col-sm-5 text-primary">Género</dt>
            <dd class="col-sm-7"><%= @player.gender&.titleize %></dd>

            <dt class="col-sm-5 text-primary">Nacionalidad</dt>
            <dd class="col-sm-7"><%= @player.nationality&.titleize %></dd>

            <dt class="col-sm-5 text-primary">Número de Documento</dt>
            <dd class="col-sm-7"><%= @player.document_number %></dd>

            <dt class="col-sm-5 text-primary">Dirección</dt>
            <dd class="col-sm-7"><%= @player.address %></dd>

            <dt class="col-sm-5 text-primary">Notas</dt>
            <dd class="col-sm-7"><%= @player.notes.presence || 'Sin notas' %></dd>
          </dl>
        </div>

        <!-- Información del Apoderado -->
        <div class="col-md-6">
          <% if @player.guardians.any? %>
            <% @player.guardians.each do |guardian| %>
              <div class="mb-3">
                <h6 class="text-success">
                  <i class="fas fa-id-badge me-1"></i> <%= guardian.full_name %>
                </h6>
                <p class="mb-1"><strong>Parentesco:</strong> <%= guardian.relationship %></p>
                <p class="mb-1"><strong>Email:</strong> <%= guardian.email %></p>
                <p class="mb-1"><strong>Teléfono:</strong> <%= guardian.phone %></p>
                <p><strong>Dirección:</strong> <%= guardian.address %></p>
              </div>
              <% unless guardian == @player.guardians.last %><hr><% end %>
            <% end %>
          <% else %>
            <p class="text-muted fst-italic">Sin apoderado registrado</p>
          <% end %>
        </div>
      </div>
    </div>

    <% if @player.documents.attached? %>
      <div class="card-footer bg-white border-top">
        <div class="mt-3">
          <h5 class="text-info mb-3">
            <i class="fas fa-file-alt me-2"></i> Documentos Asociados
          </h5>
          <% if @player.documents.attached? %>
          <p class="text-muted mb-3">Aquí puedes ver y cargar tus documentos.</p>
          <ul class="list-group list-group-flush mb-4">
            <% @player.documents.each do |doc| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to doc.filename.to_s, url_for(doc), target: "_blank", class: "text-decoration-none text-dark" %>
                <span class="badge bg-secondary rounded-pill"><%= number_to_human_size(doc.byte_size) %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">No hay documentos adjuntos.</p>
        <% end %>
        <%= form_with url: documents_player_path(@player), html: { multipart: true }, method: :post, local: true do |f| %>
          <div class="mb-3">
            <label class="form-label fw-semibold">Agregar nuevos documentos</label>
            <%= file_field_tag "document[]", multiple: true, class: "form-control", accept: "application/pdf,image/*" %>
          </div>
          <%= f.submit "Subir Documentos", class: "btn btn-info text-white" %>
          </ul>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
