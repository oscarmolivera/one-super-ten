<div class="row"><!-- /Player Photo Carousel -->
  <div class="box">
    <div id="splide" class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          <% if @player.carousel_images.attached? %>
            <% @player.carousel_images.each do |img| %>
              <li class="splide__slide">
                <%= image_tag img.variant(resize_to_limit: [800, 400]), class: "img-fluid rounded", alt: "Player Photo" %>
              </li>
            <% end %>
          <% else %>
            <% 5.times do |i| %>
              <li class="splide__slide">
                <%= image_tag "https://picsum.photos/800/400?random=#{i}", class: "img-fluid", alt: "Placeholder Slide #{i + 1}" %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<style>
  .splide__slide {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f9f9f9;
    height: 600px;
  }

  .splide__slide img {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain; /* or use 'cover' if you prefer cropped but filled look */
    border-radius: 12px;
  }
</style>