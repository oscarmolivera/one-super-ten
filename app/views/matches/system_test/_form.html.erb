<%= form_with(model: match, local: true) do |form| %>
  <% if match.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h4>
      <ul>
        <% match.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:category_id].present? %>
    <div class="mb-3">
      <label>Category</label>
      <input class="form-control" value="<%= Category.find(params[:category_id]).name %>" disabled>
      <%= hidden_field_tag :category_id, params[:category_id] %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :opponent_name %>
    <%= form.text_field :opponent_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :scheduled_at %>
    <%= form.datetime_select :scheduled_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :match_type %>
    <%= form.select :match_type, Match.match_types.keys.map { |k| [k.titleize, k] }, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :home_score %>
    <%= form.number_field :home_score, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :away_score %>
    <%= form.number_field :away_score, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :notes %>
    <%= form.text_area :notes, rows: 3, class: "form-control" %>
  </div>

  <div class="text-end">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>