<h1><%= @publication.title %></h1>

<p><strong>By:</strong> <%= @publication.author.full_name %></p>
<p><strong>Category:</strong> <%= @publication.category&.name || "All" %></p>
<p><strong>Visibility:</strong> <%= @publication.visibility %></p>
<p><strong>Pinned:</strong> <%= @publication.pinned ? "Yes" : "No" %></p>
<p><strong>Published At:</strong> <%= l(@publication.published_at, format: :long) if @publication.published_at %></p>
<p><strong>Expires At:</strong> <%= l(@publication.expires_at, format: :long) if @publication.expires_at %></p>

<div class="mt-3">
  <%= simple_format(@publication.body) %>
</div>

<hr>

<%= link_to "Back", publications_path, class: "btn btn-secondary" %>
<%= link_to "Edit", edit_publication_path(@publication), class: "btn btn-primary" %>