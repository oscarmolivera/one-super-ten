<h1>Publications</h1>

<%= link_to "New Publication", new_publication_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Visibility</th>
      <th>Category</th>
      <th>Pinned</th>
      <th>Published At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= link_to publication.title, publication %></td>
        <td><%= publication.visibility %></td>
        <td><%= publication.category&.name || "All" %></td>
        <td><%= publication.pinned ? "✅" : "—" %></td>
        <td><%= l(publication.published_at, format: :short) if publication.published_at %></td>
        <td>
          <%= link_to "Edit", edit_publication_path(publication), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Delete", publication, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>