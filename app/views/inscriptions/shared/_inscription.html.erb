<div class="container mt-4">
  <div class="d-flex align-items-center justify-content-center mb-3 gap-3">
    <%= display_cup_logo(@tournament.cup, class: "rounded shadow-sm", style: "height: 120px; width: 120px; object-fit: contain;") %>
    <h2 class="mb-0">
      Torneos Copa <%= @tournament.cup.name %>
      <small class="text-muted fs-6 d-block">
        <%= @tournament.cup.school.name %> | 
        <%= @tournament.cup.description %> |
        <%= @tournament.cup.location %>
    </h2>
      </small>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre de la Categoría</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <% inscription = @existing_inscriptions.find { |i| i.category_id == category.id } %>
        <tr>
          <td><%= category.sub_name %></td>
          <td>
            <% if inscription.present? %>
              <%= link_to 'Editar Equipo', edit_season_team_path(inscription.season_team), class: 'btn btn-sm btn-warning' %>
            <% else %>
              <%= link_to 'Crear Inscripción', new_cup_tournament_inscription_path(@tournament.cup, @tournament, category_id: category.id), class: 'btn btn-sm btn-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>