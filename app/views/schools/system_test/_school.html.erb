<div class="container mt-4">
  <h1>Escuelas</h1>

  <%= link_to "Nueva Escuela", new_school_path, class: "btn btn-primary mb-3" %>

  <div class="card">
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td><%= school.description %></td>
              <td>
                <%= link_to "Show", school_path(school), class: "btn btn-sm btn-primary" %>
                <%= link_to "Edit", edit_school_path(school), class: "btn btn-sm btn-warning" %>
                <%= link_to "Delete", school_path(school), data: { turbo: true, turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>