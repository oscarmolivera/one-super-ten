<%= form_with(model: season_team, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nombre del equipo' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, 'Categoría base' %>
    <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: 'Seleccione una categoría' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tournament_id, 'Torneo' %>
    <%= f.collection_select :tournament_id, Tournament.all, :id, :name, { prompt: 'Seleccione un torneo' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Descripción' %>
    <%= f.text_area :description, rows: 3, class: 'form-control' %>
  </div>

  <%= f.submit 'Guardar', class: 'btn btn-primary mt-2' %>
<% end %>