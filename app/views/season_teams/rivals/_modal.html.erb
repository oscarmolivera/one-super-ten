<div class="modal fade" id="rivalModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Agregar rival</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">

        <ul class="nav nav-tabs mb-3" role="tablist">
          <li class="nav-item">
            <a class="nav-link active"
               data-bs-toggle="tab"
               href="#tab-existing"
               role="tab">
              <i class="fa-solid fa-list"></i>
              Predefinido
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link"
               data-bs-toggle="tab"
               href="#tab-new"
               role="tab">
               <i class="fa-solid fa-plus"></i>
               Personalizado
            </a>
          </li>
        </ul>

        <div class="tab-content">
          <!-- 5.1 PREDEFINED LIST -->
          <div class="tab-pane fade show active" id="tab-existing" role="tabpanel">
            <turbo-frame id="existing_rivals">
              <% if @tournament_data[:rivals].any? %>
                <div class="list-group">
                  <% @tournament_data[:rivals].each do |r| %>
                    <%= button_to season_team_rivals_path(season_team),
                                  method: :post,
                                  params: { existing_rival_id: r.id },
                                  class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                      <span><%= r.name %></span>
                      <% if r.team_logo.attached? %>
                        <%= image_tag r.team_logo.variant(resize_to_limit: [40, 40]),
                                      class: "rounded",
                                      alt: r.name %>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <div class="alert alert-info">No hay rivales comunes registrados.</div>
              <% end %>
            </turbo-frame>
          </div>

          <!-- 5.2 NEW RIVAL FORM -->
          <div class="tab-pane fade" id="tab-new" role="tabpanel">
            <turbo-frame id="new_rival_form">
              <%= form_with model: Rival.new,
                            url: season_team_rivals_path(season_team),
                            data: { turbo_frame: "new_rival_form" },
                            html: { multipart: true } do |f| %>

                <div class="mb-3">
                  <%= f.label :name, "Nombre" %>
                  <%= f.text_field :name, class: "form-control" %>
                </div>

                <div class="mb-3">
                  <%= f.label :location, "UbicaciÃ³n" %>
                  <%= f.text_field :location, class: "form-control" %>
                </div>

                <div class="mb-3">
                  <%= f.label :team_logo, "Logo (opcional)" %>
                  <%= f.file_field :team_logo, class: "form-control" %>
                </div>

                <div class="text-end">
                  <%= f.submit "Crear y agregar", class: "btn btn-primary" %>
                </div>
              <% end %>
            </turbo-frame>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>