<turbo-frame id="favorite_rivals">
  <% if favorite_rivals.any? %>
    <div class="list-group">
      <% favorite_rivals.each do |rival| %>
        <%= button_to season_team_rivals_path(season_team),
                      method: :post,
                      params: { existing_rival_id: rival.id },
                      data: {
                        controller: "remote-modal",
                        action: "turbo:submit-end->remote-modal#onSubmitEnd",
                        remote_modal_modal_id_value: "rivalModal"
                      },
                      class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
          <span><%= rival.name %></span>
          <%= rival_team_logo(rival, loading: "lazy") %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-3">
      <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
  <% else %>
    <div class="alert alert-info">No hay rivales comunes registrados.</div>
  <% end %>
</turbo-frame>