<h4 class="mb-3">Rivales de <%= @season_team.name %></h4>

<!-- List -->
<div class="row row-cols-1 row-cols-md-3 g-3">
  <% @rivals.each do |rival| %>
    <div class="col">
      <div class="card h-100 shadow-sm border-0">
        <%= image_tag(rival.team_logo.variant(resize_to_limit: [220,220]),
                       class: "card-img-top",
                       alt: rival.name) if rival.team_logo.attached? %>

        <div class="card-body">
          <h6 class="card-title mb-1"><%= rival.name %></h6>
          <p class="text-muted mb-2"><i class="fa-solid fa-location-dot me-1"></i><%= rival.location %></p>

          <%= link_to "Editar", edit_season_team_rival_path(@season_team, rival),
                      class: "btn btn-outline-secondary btn-sm" %>
          <%= link_to "Quitar", season_team_rival_path(@season_team, rival),
                      method: :delete,
                      data: { confirm: "¿Seguro?" },
                      class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<hr class="my-4">

<!-- Inline new rival form -->
<%= form_with(model: [@season_team, @rival], class: "row g-3", html: { multipart: true }) do |f| %>
  <div class="col-md-4">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="col-md-4">
    <%= f.label :location, "Ubicación", class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="col-md-4">
    <%= f.label :team_logo, "Logo", class: "form-label" %>
    <%= f.file_field :team_logo, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= f.submit "Agregar Rival", class: "btn btn-primary" %>
  </div>
<% end %>