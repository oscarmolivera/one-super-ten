<%= form_with model: rival,
              url: season_team_rivals_path(season_team),
              data: { turbo_frame: "new_rival_form" },
              html: { multipart: true } do |f| %>

  <div class="mb-3">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :location, "UbicaciÃ³n" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :team_logo, "Logo (opcional)" %>
    <%= f.file_field :team_logo, class: "form-control" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :is_favorite, class: "form-check-input" %>
    <%= f.label :is_favorite, "Favorito?", class: "form-check-label" %>
  </div>

  <div class="text-end">
    <%= f.submit "Crear y agregar", class: "btn btn-primary" %>
  </div>
<% end %>