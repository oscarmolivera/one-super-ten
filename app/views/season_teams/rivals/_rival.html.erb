<div class="card mb-2 shadow-sm border-0">
  <div class="card-body d-flex align-items-center gap-3">
    <% if rival.team_logo.attached? %>
      <%= image_tag rival.team_logo.variant(resize_to_limit: [60,60]),
                    class: "rounded-circle shadow-sm",
                    alt: rival.name %>
    <% else %>
      <%= image_tag "placeholder_team_logo.png",
                    width: 60, height: 60,
                    class: "rounded-circle shadow-sm",
                    alt: "Sin logo" %>
    <% end %>

    <div class="flex-grow-1">
      <h5 class="mb-0"><%= rival.name %></h5>
      <small class="text-muted"><%= rival.location.presence || "Ubicación desconocida" %></small>
    </div>

    <%= button_to "✕",
        rival_path(rival.season_teams.first.id || params[:id], rival),
        method: :delete,
        class: "btn btn-sm btn-outline-danger",
        form: { data: { turbo_confirm: "¿Eliminar rival?" } } %>
  </div>
</div>