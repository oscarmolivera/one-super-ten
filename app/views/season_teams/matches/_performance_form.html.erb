<turbo-frame id="performance_frame_<%= @match.id %>">
  <%= form_with model: match, url: match_path(@match), method: :patch, data: { turbo_frame: "_self" } do |f| %>
    <div class="card shadow-lg border-0 rounded-3 mb-4">
      <div class="card-header bg-success-light text-muted rounded-top">
        <h4 class="mb-0 fw-bold">Actualizar Marcador del Partido | <small class="text-muted">Partido ID: <%= @match.id %></small></h4>
      </div>
      <div class="card-body p-4">
        <div class="row align-items-center mb-3">
          <div class="col-12 text-center mb-3">
            
          </div>
          <div class="col-md-6 d-flex align-items-center">
            <div class="me-3">
              <%= display_home_team_logo_and_name(match) %>
            </div>
            <div class="w-100">
              <%= f.label :rival_score, "Goles Anotados:", class: "form-label fw-semibold" %>
              <%= f.number_field :team_score, class: "form-control form-control-lg", min: 0, value: match.team_score || 0, placeholder: "0" %>
            </div>
          </div>
          <div class="col-md-6 d-flex align-items-center">
            <div class="me-3">
              <%= display_away_team_logo_and_name(match) %>
            </div>
            <div class="w-100">
              <%= f.label :rival_score, "Goles Anotados:", class: "form-label fw-semibold" %>
              <%= f.number_field :rival_score, class: "form-control form-control-lg", min: 0, value: match.rival_score || 0, placeholder: "0" %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light border-0 p-3 d-flex justify-content-end gap-2">
        <%= f.submit "Guardar Marcador", class: "btn btn-primary btn-lg px-4" %>
        <button type="button" class="btn btn-outline-secondary btn-lg px-4" data-action="frame-closer#close">Cancelar</button>
      </div>
    </div>
  <% end %>
</turbo-frame>