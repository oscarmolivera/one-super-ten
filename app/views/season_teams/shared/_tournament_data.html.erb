    <div class="container mt-4">
  <div class="d-flex align-items-center justify-content-center mb-3 gap-3">
    <%= display_cup_logo(@tournament_data[:cup], class: "rounded shadow-sm", style: "height: 120px; width: 120px; object-fit: contain;") %>
    <h1 class="mb-0">
      Torneos Copa <%= @tournament_data[:cup].name %>
      <small class="text-muted fs-6 d-block">
        <%= @tournament_data[:cup].school.name %> | 
        <%= @tournament_data[:cup].description %> |
        <%= @tournament_data[:cup].location %>
      </small>
    </h1>
  </div>
</div>
<div class="col-12">
    <ul class="nav nav-tabs nav-fill" role="tablist">
      <li class="nav-item"> <a class="nav-link active" data-bs-toggle="tab" href="#players" role="tab"><span><i class="fas fa-users"></i></span> <span class="hidden-xs-down ms-15">Jugadores</span></a> </li>
      <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#regulations" role="tab"><span><i class="fa-solid fa-file-contract"></i></span> <span class="hidden-xs-down ms-15">Normas Reguladoras</span></a> </li>
      <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#rivals" role="tab"><span><i class="fa-solid fa-people-group"></i></span> <span class="hidden-xs-down ms-15">Equipo Participantes</span></a> </li>
      <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#match-result" role="tab"><span><i class="fa-solid fa-chess-knight"></i></span> <span class="hidden-xs-down ms-15">Partidos & Detalles</span></a> </li>
      <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#about11" role="tab"><span><i class="ion-person"></i></span> <span class="hidden-xs-down ms-15">About</span></a> </li>
      <li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#contact11" role="tab"><span><i class="ion-camera"></i></span> <span class="hidden-xs-down ms-15">Contact</span></a> </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content tabcontent-border">
      <div class="tab-pane active" id="players" role="tabpanel"><!-- SeasonTeam List -->
        <%= render partial: 'season_teams/tabs/team_list', tournament_data: @tournament_data %>
      </div>
      <div class="tab-pane" id="regulations" role="tabpanel"><!-- Norms & Regulations Area -->
        <%= render partial: 'season_teams/tabs/regulations', season_team: @season_team %>
      </div>      
      <div class="tab-pane" id="rivals" role="tabpanel"><!-- SeasonTeam Rivals List -->
        <div class="p-15">
          <h4 class="mb-3">Rivales de <%= @season_team.category.sub_name %></h4>
          <div class="row row-cols-1 row-cols-md-3 g-3"><!-- List -->
            <% @tournament_data[:rivals]&.each do |rival| %>
              <div class="col">
                <div class="card h-100 shadow-sm border-0">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <%= image_tag(rival.team_logo.variant(resize_to_limit: [220,220]),
                                class: "card-img-top", style: "max-width: 30%; object-fit: contain;",
                                alt: rival.name) if rival.team_logo.attached? %>
                      </div>
                      <div class="col-md-6">
                        <h6 class="card-title mb-1"><%= rival.name %></h6>
                        <p class="text-muted mb-2"><i class="fa-solid fa-location-dot me-1"></i><%= rival.location %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <hr class="my-4"><!-- Inline new rival form -->
          <%= form_with(model: [@rival], class: "row g-3", html: { multipart: true }) do |f| %>
            <div class="col-md-4">
              <%= f.label :name, "Nombre", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="col-md-4">
              <%= f.label :location, "Ubicación", class: "form-label" %>
              <%= f.text_field :location, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :team_logo, "Logo", class: "form-label" %>
              <%= f.file_field :team_logo, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.submit "Agregar Rival", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="tab-pane" id="match-result" role="tabpanel"><!-- Matches List -->
        <div class="p-15">
          <!-- app/views/season_teams/matches.html.erb -->
          <div class="container my-4">

            <h2 class="fw-bold text-center mb-4">
              Partidos de <%= @season_team.category.sub_name %>
            </h2>

            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
              <% if @matches.present? %>
                <% @matches&.order(:scheduled_at).each do |match| %>
                  <% home  = match.home_team  %>
                  <% away  = match.away_team  %>
                  <% played = match.home_score.present? && match.away_score.present? %>

                  <div class="col">
                    <div class="card h-100 shadow-sm border-0">

                      <!-- DATE - TIME & VENUE -->
                      <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">
                          <i class="fa-solid fa-calendar-days me-1"></i>
                          <%= l(match.updated_at, format: :long) %>
                        </span>
                        <span class="text-muted">
                          <i class="fa-solid fa-location-dot me-1"></i>
                          <%= match.location.presence || 'Por definir' %>
                        </span>
                      </div>

                      <!-- TEAM LOGOS & SCORE -->
                      <div class="card-body d-flex flex-column justify-content-center text-center">

                        <div class="d-flex align-items-center justify-content-around mb-3 gap-2">
                          <%= image_tag(home.team_logo.variant(resize_to_limit: [80,80]),
                                        alt: home.name,
                                        class: "rounded shadow-sm") if home.team_logo.attached? %>

                          <div class="fs-3 fw-bold">
                            <% if played %>
                              <span><%= match.home_score %></span>
                              —
                              <span><%= match.away_score %></span>
                            <% else %>
                              <span class="text-muted">vs</span>
                            <% end %>
                          </div>

                          <%= image_tag(away.team_logo.variant(resize_to_limit: [80,80]),
                                        alt: away.name,
                                        class: "rounded shadow-sm") if away.team_logo.attached? %>
                        </div>

                        <!-- NAMES -->
                        <p class="mb-0 fw-semibold">
                          <%= home == @season_team ? 'Nosotros' : home.name %>
                          <span class="text-muted">vs</span>
                          <%= away == @season_team ? 'Nosotros' : away.name %>
                        </p>

                      </div>

                      <!-- FOOTER: MATCH STATUS -->
                      <div class="card-footer bg-transparent text-center">
                        <% if played %>
                          <span class="badge bg-success"><i class="fa-solid fa-flag-checkered me-1"></i>Finalizado</span>
                        <% elsif match.updated_at.future? %>
                          <span class="badge bg-warning text-dark"><i class="fa-solid fa-clock me-1"></i>Próximo</span>
                        <% else %>
                          <span class="badge bg-secondary"><i class="fa-solid fa-circle-question me-1"></i>Por confirmar</span>
                        <% end %>
                      </div>

                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="col-12">
                  <div class="alert alert-info text-center">
                    No hay partidos programados para esta categoría.
                  </div>
                </div>
              <% end %>
            </div>
          </div>          
        </div>
      </div>
      <div class="tab-pane" id="about11" role="tabpanel">
        <div class="p-15">
        </div>
      </div>
      <div class="tab-pane" id="contact11" role="tabpanel">
        <div class="p-15">
        </div>
      </div>
    </div>
</div>
<div class="d-flex justify-content-between mt-4">
  <%= link_to "← Volver a Datos de Torneo", tenant_dashboard_path, class: "btn btn-outline-secondary" %>
</div>